<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context=".o1YearTwoActivity">


    <TextView
        android:id="@+id/textView"
        android:layout_width="234dp"
        android:layout_height="54dp"
        android:layout_above="@id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:text="@string/o1Question"
        android:textAlignment="center"
        android:textColor="@color/colorText"
        android:textSize="22dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="160dp"
        android:layout_height="130dp"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/textQuestion_O1"
        android:layout_marginBottom="20dp"
        app:srcCompat="@drawable/cry_o1" />

    <TextView
        android:id="@+id/textQuestion_O1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginBottom="30dp"
        android:text="_ass"
        android:textColor="@color/colorText"
        android:textSize="24sp" />

    <ImageButton
        android:id="@+id/imageButtonVolume_o1"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@id/imageView"
        android:layout_toLeftOf="@id/textQuestion_O1"
        android:layout_marginRight="30dp"
        android:background="@color/colorGrid"
        app:srcCompat="@drawable/ic_volume_up_black_24dp" />

    <TextView
        android:id="@+id/textOption1_o1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textQuestion_O1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:paddingBottom="20dp"
        android:text="gl"
        android:textColor="@color/colorText"
        android:textSize="20sp" />

    <ImageButton
        android:id="@+id/imageButtonVolume2_o1"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@id/textQuestion_O1"
        android:layout_toLeftOf="@id/textQuestion_O1"
        android:layout_marginRight="30dp"
        android:background="@color/colorGrid"
        app:srcCompat="@drawable/ic_volume_up_black_24dp" />

    <TextView
        android:id="@+id/textOption2_o1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textOption1_o1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:paddingBottom="20dp"
        android:text="tr"
        android:textColor="@color/colorText"
        android:textSize="20sp" />

    <ImageButton
        android:id="@+id/imageButtonVolume3_o1"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@id/textOption1_o1"
        android:layout_marginTop="28dp"
        android:layout_marginRight="4dp"
        android:layout_toLeftOf="@id/textOption2_o1"
        android:background="@color/colorGrid"
        app:srcCompat="@drawable/ic_volume_up_black_24dp" />


</RelativeLayout>